<div class="auth-container">
    <h2>Cadastre-se</h2>
    <form action="/register" method="POST">
        <div class="form-control">
            <label for="name">Nome:</label>
            <input type="text" name="name" placeholder="Digite o seu nome" required>
        </div>
        <div class="form-control">
            <label for="email">E-mail:</label>
            <input type="email" name="email" placeholder="Digite o seu email" required>
        </div>
        <div class="form-control">
            <label for="password">Senha:</label>
            <input type="password" name="password" placeholder="Digite a senha desejada" required>
        </div>
        <div class="form-control">
            <label for="confirmpassword">SConfirmação de senha:</label>
            <input type="password" name="confirmpassword" placeholder="Confirme sua senha" required>
        </div>
        <input type="submit" value="Cadastrar"/>
        <p>Já possui uma conta? <a href="/login">Clique Aqui!</a></p>
    </form>
</div>